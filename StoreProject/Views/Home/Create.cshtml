@model StoreProject.Models.Product



<div class="masthead">

    <h2>Create</h2>

    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input asp-for="Title" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription">Short Description:</label>
                    <input asp-for="ShortDescription" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="LongDescription">Long Description:</label>
                    <input asp-for="LongDescription" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Date">Long Description:</label>
                    <input asp-for="Date" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Img1">Image 1:</label>
                    <input type="file" class="form-control" name="img1" multiple>
                </div>
                <div class="form-group">
                    <label asp-for="Img2">Image 2:</label>
                    <input type="file" class="form-control" name="img2" multiple>
                </div>
                <div class="form-group">
                    <label asp-for="Img3">Image 3:</label>
                    <input type="file" class="form-control" name="img3" multiple>
                </div>
                <input type="submit" value="Add product" class="btn btn-default" />
            </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
